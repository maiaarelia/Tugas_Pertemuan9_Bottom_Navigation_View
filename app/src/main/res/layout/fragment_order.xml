<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Order">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/baseline_arrow_back_24" />

        <TextView
            android:id="@+id/txt_detail"
            android:layout_toRightOf="@+id/img_back"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order Summary"
            android:textAlignment="center"
            android:fontFamily="@font/poppins_bold"
            android:textColor="#D54D35"
            android:textSize="25sp"
            android:textStyle="bold">
        </TextView>

    </RelativeLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:src="@drawable/card_order">
    </ImageView>

    <ImageView
        android:id="@+id/poster"
        android:layout_width="106dp"
        android:layout_height="124dp"
        android:src="@drawable/zootopia"
        android:layout_marginTop="110dp"
        android:layout_marginStart="50dp">
    </ImageView>

    <TextView
        android:id="@+id/judul_poster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/poster"
        android:text="ZOOTOPIA"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="110dp"
        android:fontFamily="@font/poppins_bold"
        android:textSize="20sp">
    </TextView>

    <TextView
        android:id="@+id/tempat_nonton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:layout_below="@+id/judul_poster"
        android:layout_toRightOf="@id/poster"
        android:layout_marginTop="10dp"
        android:text="XXI Ambarukmo Plaza,
        Studio 1"
        android:layout_marginLeft="20dp"
        android:textSize="15sp">
    </TextView>

    <TextView
        android:id="@+id/waktu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:layout_below="@+id/tempat_nonton"
        android:layout_toRightOf="@id/poster"
        android:layout_marginTop="10dp"
        android:text="Wednesday, 15 Oktober, 19:05"
        android:layout_marginLeft="20dp"
        android:textSize="12sp">
    </TextView>

    <TextView
        android:id="@+id/timemovie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:layout_below="@+id/waktu"
        android:layout_toRightOf="@id/poster"
        android:layout_marginTop="10dp"
        android:text="...."
        android:layout_marginLeft="20dp"
        android:textSize="12sp">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/order_number"
        android:layout_below="@id/poster"
        android:text="Order Number"
        android:layout_marginTop="80dp"
        android:layout_marginStart="50dp"
        android:textSize="15sp"
        android:fontFamily="@font/poppins_semibold">
    </TextView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/isi_order_number"
        android:layout_below="@id/order_number"
        android:text="1198804794001625088"
        android:layout_marginStart="50dp"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_semibold">
    </TextView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seat"
        android:layout_below="@id/isi_order_number"
        android:text="Seat"
        android:layout_marginTop="10dp"
        android:layout_marginStart="50dp"
        android:textSize="15sp"
        android:fontFamily="@font/poppins_semibold">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/isi_seat"
        android:layout_below="@id/seat"
        android:text="1198804794001625088"
        android:layout_marginStart="50dp"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_semibold">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/payment"
        android:layout_below="@id/isi_seat"
        android:text="Payment Method"
        android:layout_marginTop="10dp"
        android:layout_marginStart="50dp"
        android:textSize="15sp"
        android:fontFamily="@font/poppins_semibold">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/method_payment"
        android:layout_below="@id/payment"
        android:text="1198804794001625088"
        android:layout_marginStart="50dp"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_semibold">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nama_seat"
        android:layout_below="@id/method_payment"
        android:text="Nama Seat"
        android:layout_marginTop="10dp"
        android:layout_marginStart="50dp"
        android:textSize="15sp"
        android:fontFamily="@font/poppins_semibold">
    </TextView>

    <TextView
        android:id="@+id/jumlah_seat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nama_seat"
        android:text="1198804794001625088"
        android:layout_marginStart="50dp"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_semibold">
    </TextView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fee"
        android:layout_below="@id/jumlah_seat"
        android:text="Convenience Fee"
        android:layout_marginTop="10dp"
        android:layout_marginStart="50dp"
        android:textSize="15sp"
        android:fontFamily="@font/poppins_semibold">
    </TextView>

    <TextView
        android:id="@+id/isi_fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fee"
        android:text="Rp.0"
        android:layout_marginStart="50dp"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_semibold">
    </TextView>

    <View
        android:id="@+id/garis"
        android:layout_centerHorizontal="true"
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:background="@color/black"
        android:layout_below="@id/isi_fee"
        android:layout_marginTop="10dp">
    </View>

    <TextView
        android:id="@+id/total_harga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/garis"
        android:text="Actual Pay"
        android:layout_marginStart="50dp"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_semibold">
    </TextView>


    <TextView
        android:id="@+id/total_pembayaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/total_harga"
        android:layout_below="@id/garis"
        android:text="Rp. "
        android:layout_marginStart="100dp"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_semibold">
    </TextView>


</RelativeLayout>