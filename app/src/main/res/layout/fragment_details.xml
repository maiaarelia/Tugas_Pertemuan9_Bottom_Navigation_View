<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".details">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/baseline_arrow_back" />

        <TextView
            android:id="@+id/txt_detail"
            android:layout_toRightOf="@+id/img_back"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Details Movie"
            android:textAlignment="center"
            android:fontFamily="@font/poppins_bold"
            android:textColor="#D54D35"
            android:textSize="25sp"
            android:textStyle="bold">
        </TextView>

    </RelativeLayout>

    <ImageView
        android:id="@+id/img_movie"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="70dp"
        android:scaleType="centerCrop"
        android:src="@drawable/zoo"

        />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_inti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        android:layout_marginTop="130dp"
        >
    </androidx.cardview.widget.CardView>


    <ImageView
        android:id="@+id/img_card"
        android:layout_below="@id/card_inti"
        android:layout_width="700dp"
        android:layout_height="200dp"
        android:src="@drawable/zootopia">
    </ImageView>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ZOOTOPIA"
        android:layout_below="@id/img_card"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/poppins_bold"
        android:textSize="25sp">
    </TextView>

    <TextView
        android:id="@+id/director"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_light"
        android:layout_below="@id/title"
        android:text="Director : Kelinci Rubah"
        android:layout_marginTop="5dp"
        android:layout_marginStart="30dp" >

    </TextView>

    <TextView
        android:id="@+id/genre1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:layout_below="@id/director"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/round"
        android:text="Animasi">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:layout_below="@id/director"
        android:layout_toRightOf="@id/genre1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/round"
        android:text="Fantasi - Kekuatan Super Flash">
    </TextView>


    <TextView
        android:id="@+id/storyline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/genre1"
        android:text="StoryLine"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:textSize="18dp"
        android:fontFamily="@font/poppins_semibold"
        ></TextView>

    <TextView
        android:id="@+id/isi_storyline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="In the bustling city of Zootopia, where mammals of all kinds live together, Judy Hopps, a determined and optimistic young rabbit, fulfills her lifelong dream of becoming the first bunny police officer. While she's excited to start her new job, she quickly realizes that it's not as easy as she thought."
        android:layout_below="@id/storyline"
        android:fontFamily="@font/poppins_light"
        android:layout_marginStart="30dp"
        android:textSize="11sp"
        android:gravity="start|end"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="8dp">
    </TextView>

    <Button
        android:id="@+id/btn_getTicket"
        android:layout_width="350dp"
        android:fontFamily="@font/poppins_bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/isi_storyline"
        android:layout_height="60dp"
        android:text="Get Ticket"
        android:layout_marginTop="15dp"
        android:backgroundTint="#D54D35"
        android:textSize="18sp"/>

</RelativeLayout>